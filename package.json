{
  "name": "geraldin-bot",
  "version": "4.5.6-beta",
  "description": "Bot para sinalizar parceiros por WhatsApp quando recebem pedido no Geraldo <aiqfome>",
  "bin": "src/main.js",
  "main": "src/main.js",
  "author": "Renan D.",
  "license": "MIT",
  "dependencies": {
    "@sentry/node": "7.64.0",
    "@wppconnect-team/wppconnect": "^1.28.0",
    "async-retry": "^1.3.3",
    "chalk": "4.1.2",
    "chrome-launcher": "0.15.2",
    "deep-email-validator": "^0.1.21",
    "dotenv": "14.3.2",
    "gravatar": "^1.8.2",
    "luxon": "^3.4.3",
    "moment": "^2.29.4",
    "node-fetch": "2.6.7",
    "npm-run-all": "^4.1.5",
    "ora": "5.4.1",
    "puppeteer-core": "^21.3.8",
    "semver": "^7.5.4",
    "sprintf-js": "^1.1.3",
    "winston": "^3.11.0"
  },
  "overrides": {
    "chrome-launcher": "0.15.2",
    "chalk": "4.1.2",
    "dotenv": "14.3.2",
    "node-fetch": "2.6.7",
    "ora": "5.4.1"
  },
  "pkg": {
    "assets": [
      "node_modules/**/*.*",
      ".env.build"
    ],
    "targets": [
      "node20-win",
      "node20-linux"
    ],
    "outputPath": "../dist"
  },
  "scripts": {
    "start": "node .",
    "prebuild": "rm -rf ../dist && rm -rf ../geraldin-bot.v%npm_package_version%.zip && rm -rf node_modules/ && npm install && npm run prebuild-linux",
    "prebuild-linux": "npm install --cpu=x64 --os=linux --libc=glibc sharp",
    "build": "pkg . -C brotli",
    "postbuild": "cp package.json LICENSE .env.ini.example README.md ../dist && mv ../dist/.env.ini.example ../dist/.env.ini && npm run zip",
    "zip": "powershell Compress-Archive ../dist/* ../geraldin-bot.v%npm_package_version%.zip"
  }
}