{
  "name": "geraldin-bot",
  "version": "1.5.0-beta",
  "description": "Bot para sinalizar parceiros por WhatsApp quando recebem pedido no Geraldo <aiqfome>",
  "bin": "src/main.js",
  "main": "src/main.js",
  "author": "Renan D.",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "chrome-launcher": "^0.15.0",
    "dotenv": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "puppeteer-core": "^11.0.0",
    "socket.io": "^4.3.1",
    "socket.io-client": "^4.3.2",
    "venom-bot": "^4.0.3"
  },
  "pkg": {
    "assets": "node_modules/**/*.*",
    "targets": [
      "node14-win"
    ],
    "outputPath": "../dist"
  },
  "scripts": {
    "geraldo": "node src/geraldo-listener",
    "whatsapp": "node src/whatsapp-bot",
    "start": "npm-run-all -r --parallel geraldo whatsapp",
    "prebuild": "rm -rf ../dist",
    "build": "pkg . -C brotli",
    "postbuild": "cp package.json package-lock.json LICENSE .env.ini.example README.md ../dist && mv ../dist/.env.ini.example ../dist/.env.ini"
  }
}
