{
  "name": "geraldin-bot",
  "version": "1.0.0-beta",
  "description": "Bot para sinalizar parceiros por WhatsApp quando recebem pedido no Geraldo <aiqfome>",
  "bin": "main.js",
  "author": "Renan D.",
  "license": "MIT",
  "dependencies": {
    "chrome-launcher": "^0.14.0",
    "dotenv": "^10.0.0",
    "npm-run-all": "^4.1.5",
    "puppeteer-core": "^10.1.0",
    "socket.io": "^4.1.3",
    "socket.io-client": "^4.1.3",
    "venom-bot": "^3.0.21"
  },
  "pkg": {
    "targets": [
      "node14-win"
    ],
    "scripts": [
      "node_modules/puppeteer/lib/*.js",
      "node_modules/puppeteer-extra-plugin-stealth/**/*.js"
    ],
    "assets": [
      "node_modules/sharp/build/**",
      "node_modules/sharp/vendor/*/lib/*"
    ],
    "outputPath": "../dist"
  },
  "scripts": {
    "geraldo": "node geraldo-listener",
    "whatsapp": "node whatsapp-bot",
    "start": "npm-run-all -r --parallel geraldo whatsapp",
    "prebuild": "rm -rf ../dist",
    "build": "pkg . -C brotli",
    "postbuild": "cp geraldo-listener.js whatsapp-bot.js package.json package.json.lock .env.ini.example README.md ../dist && mv ../dist/.env.ini.example ../dist/.env.ini"
  }
}
